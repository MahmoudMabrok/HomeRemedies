<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1D1E27"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1D1E27"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/write_pic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                app:civ_border="true"
                app:civ_border_color="#D8D8D8"
                app:civ_border_width="1dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/write_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@+id/write_pic"
                android:fontFamily="@font/avenir_book"
                android:text="Shahzad Afridi"
                android:textColor="#FFFFFF"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/write_occupassion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/write_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/write_pic"
                android:fontFamily="@font/avenir_book"
                android:text="Writer"
                android:textColor="#AFAAAA"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/time_remedie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="22dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/sanomat_regular"
                android:text="1 day ago"
                android:textColor="#777777"
                android:textSize="12dp"
                android:textStyle="normal" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/remedie_thumbline"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="16dp"
            android:background="#A6A6A6" />

        <TextView
            android:id="@+id/title_remedie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/avenir_book"
            android:lines="1"
            android:text="WHY YOU SHOULD GO TO INDONESIA"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/description_remedie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/sanomat_regular"
            android:lineSpacingExtra="6dp"
            android:lines="2"
            android:text="The purpose of this document is to explain every detail of the proposed system. What are the features and functions of the proposed system, interface of the system and what the system will be able to do?"
            android:textColor="#9B9A9A"
            android:textSize="13dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:background="#9B9A9A" />


    </LinearLayout>


</LinearLayout>
