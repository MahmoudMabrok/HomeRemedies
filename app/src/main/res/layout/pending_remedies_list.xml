<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title_pendingAdapter"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:hint="Cheif Burger"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/detial_pendingAdapter"
                android:layout_below="@id/title_pendingAdapter"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:gravity="top|left"
                android:layout_width="match_parent"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="horizontal"
                android:layout_height="120dp"/>

            <TextView
                android:id="@+id/postedBy"
                android:layout_below="@+id/detial_pendingAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:hint="Posted By: Shahzad Afridi"/>


            <TextView
                android:id="@+id/approve_pendingAdapter"
                android:layout_below="@+id/detial_pendingAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/delete_pendingAdapter"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/delete_approve_background"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="15dp"
                android:text="Approve"/>

            <TextView
                android:id="@+id/delete_pendingAdapter"
                android:layout_below="@+id/detial_pendingAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/delete_approve_background"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="15dp"
                android:text="Delete"/>

            <TextView
                android:layout_below="@+id/delete_pendingAdapter"
                android:layout_width="match_parent"
                android:layout_height="8dp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>
