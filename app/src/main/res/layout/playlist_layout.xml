<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1.3"
        android:elevation="5dp"
        app:cardCornerRadius="6dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/image_playlist"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/backgroundlogo"
                android:foreground="@drawable/blacktransparent"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_playlist"
                android:background="#000">

                <TextView
                    android:id="@+id/playlistTitle_playlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/sanomat_medium"
                    android:text="Channel: Daily Health Tips"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Description_playlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/playlistTitle_playlist"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/sanomat_regular"
                    android:text="Description"
                    android:textColor="#80FFFFFF"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/publishAt_playlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Description_playlist"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@drawable/ic_access_time_black_24dp"
                    android:fontFamily="@font/sanomat_regular"
                    android:text="  publish At: 21/2/2003"
                    android:textColor="#80FFFFFF"
                    android:textSize="10dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_below="@+id/publishAt_playlist" />
            </RelativeLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>
