<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_adapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000"
                android:fontFamily="@font/sanomat_bold"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="How to Relieve Sinus Pressure..."
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detial_adpater"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_below="@id/title_adapter"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/sanomat_regular"
                android:gravity="top|left"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="horizontal"
                android:text=""
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/postedBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detial_adpater"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp"
                android:background="#26000000"
                android:fontFamily="@font/sanomat_regular"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Posted By: Shahzad Afridi"
                android:textColor="#7E7C7C"
                android:textSize="14dp" />
