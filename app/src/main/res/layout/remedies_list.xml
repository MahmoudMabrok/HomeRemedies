<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/write_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:civ_border="true"
            app:civ_border_color="#D8D8D8"
            app:civ_border_width="1dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/postedBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@+id/write_pic"
            android:fontFamily="@font/avenir_book"
            android:text="Shahzad Afridi"
            android:textColor="#030303"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/write_occupassion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/write_pic"
            android:layout_below="@+id/postedBy"
            android:fontFamily="@font/avenir_book"
            android:text="Writer"
            android:textColor="#777777"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/time_adapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/sanomat_regular"
            android:text="1 day ago"
            android:textColor="#777777"
            android:textSize="12dp"
            android:textStyle="normal" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/thumbline_adapter"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#A6A6A6"/>

    <TextView
        android:id="@+id/title_adapter"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:fontFamily="@font/avenir_book"
        android:text="WHY YOU SHOULD GO TO INDONESIA"
        android:textColor="#000000"
        android:textSize="14dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/detial_adpater"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:fontFamily="@font/sanomat_regular"
        android:lineSpacingExtra="6dp"
        android:text="The purpose of this document is to explain every detail of the proposed system. What are the features and functions of the proposed system, interface of the system and what the system will be able to do?"
        android:textColor="#777777"
        android:textSize="13dp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#D8D8D8"/>

</LinearLayout>
